import wollok.game.*

object caja {
	var property position = game.center()
	method image() = "cajaa.jpg"
	method moverse() {
		position = position.right(1)
	}
}

object utn {
	var property position = game.origin()
	method image() = "UTN.jpg"
}

program ejemplo {
	
	game.width(30)
	game.height(30)
	game.title("JUEGO FALOPA")
	game.addVisualCharacter(utn)
	game.addVisual(caja)
	game.whenCollideDo(utn,{elemento => elemento.moverse()
		game.say(utn,"AUCH D:")
	})
	game.start()

}